{
  "name": "kopi",
  "version": "1.0.0",
  "description": "Kopi business website",
  "scripts": {
    "start": "serve -l 3000 src/",
    "dev": "sass src/scss/:src/css --watch --update",
    "build": "sass src/scss:src/css",
    "fmt": "yarn fmt:html && yarn fmt:css && yarn fmt:js",
    "fmt:html": "prettier --write **/*.html",
    "fmt:css": "prettier --write **/*.css && stylelint --fix **/*.css",
    "fmt:js": "eslint **/*.js --fix && prettier --write src/js/**/*.js"
  },
  "author": "Joshua Hero H. Dela Cruz (mjhdelacruz@tip.edu.ph)",
  "license": "MIT",
  "devDependencies": {
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "prettier": "2.4.1",
    "prettier-eslint": "13.0.0",
    "sass": "1.43.4",
    "serve": "12.0.1",
    "stylelint": "14.0.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "23.0.0",
    "stylelint-prettier": "1.2.0"
  }
}
